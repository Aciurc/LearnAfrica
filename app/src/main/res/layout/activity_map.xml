<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devpants.learnafrica.MapActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hsvBottomBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Algeria"
                    android:id="@+id/btnAlgeria"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angola"
                    android:id="@+id/btnAngola"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button3"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button5"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button6"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button7"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button1"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button22"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button33"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button55"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button66"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button77"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <com.devpants.learnafrica.VScroll
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/svVertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/hsvBottomBar">

        <com.devpants.learnafrica.HScroll
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hsvHorizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_view"
                    android:src="@drawable/africa"
                    android:scaleType="centerCrop"/>

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position 1"/>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_marginTop="196dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position 2"
                    android:layout_below="@+id/radioButton3"
                    android:layout_toRightOf="@+id/radioButton"
                    android:layout_toEndOf="@+id/radioButton"/>

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position 3"/>
            </RelativeLayout>
        </com.devpants.learnafrica.HScroll>
    </com.devpants.learnafrica.VScroll>
</RelativeLayout>
